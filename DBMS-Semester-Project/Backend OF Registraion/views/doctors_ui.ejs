<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors ui</title>
    <link rel="stylesheet" href="style3.css">
</head>
<body>
    <div class="nav-container">
    <a href="/landing" class = "logo-link"><h2 class="logo">Giki Medical Center</h2></a>
    <h2 class="page-info">Meet Our Doctors</h2>
    </div>
    <div class="container">
        <% doctor.forEach(doctor => { %>
        <div class="cards">
        <form action="/book-appointment" method ="POST">
        <div class="image"><img src="<%= doctor.image_url %>" alt="Doctor Image"></div>
        <div class="title"><h2>Name - <%= doctor.name %></h2></div>
        <div class="specilization"><h3>Specialization  <%= doctor.specialization %></h3></div>
        <div class="experience"><h3>Years of Experience  <%= doctor.experience %></h3></div>
        <h3>Contact Info</h3>
        <h3>mobile number  <%= doctor.mobile_number %></h3>
        <h3>email address  <%= doctor.email %></h3>
        <div class="description">
            <h3>Brief Description</h3>
            <h3><p><%= doctor.description %></p></h3>
        </div>
        <!-- Hidden inputs for backend -->
        <input type="hidden" name="doctor_name" value="<%= doctor.name %>">
        <input type="hidden" name="doctor_email" value="<%= doctor.email %>">
        <button>Book Appointment</button>
    </form>
    </div>
    <% }); %>
</div>
</body>
</html>